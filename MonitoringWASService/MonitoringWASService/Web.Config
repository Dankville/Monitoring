<?xml version="1.0" encoding="utf-8" ?>  
<configuration>  
  <system.serviceModel>  
    
    <services>
      <service name="MonitoringWASService.MonitoringService"
               behaviorConfiguration="" />
    </services>
      
    <bindings>  
      <netTcpBinding>  
        <binding portSharingEnabled="true">  
          <security mode="None" />  
        </binding>  
      </netTcpBinding>  
    </bindings>  
  
    <behaviors>
      <serviceBehaviors>
        <behavior name="MonitoringServiceBehavior">
          <serviceMetadata/>
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  

  </system.serviceModel>  
</configuration>  